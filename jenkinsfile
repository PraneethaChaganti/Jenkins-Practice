pipeline{
    agent any
    
    stages{
        stage('checkout'){
            steps{
                echo 'cloning git repository'
                git url: 'https://github.com/PraneethaChaganti/Jenkins-Practice.git', branch: 'main'
            }
        }
        
        stage('build & test'){
            steps{
                echo 'building and testing'
                sh 'chmod 777 "/var/jenkins_home/workspace/Jenkin Pipeline/challenge 1.sh"'
                echo 'verifying file permissions'
                sh 'ls -lrt "/var/jenkins_home/workspace/Jenkin Pipeline/challenge 1.sh"'
                echo 'running file in git'
                sh '"/var/jenkins_home/workspace/Jenkin Pipeline/challenge 1.sh"'
            }
        }
    }
}
